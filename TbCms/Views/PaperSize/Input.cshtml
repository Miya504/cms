@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/MasterEdit.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SheetSizeMasterEdit</title>
</head>
<body>
    <form>

        <h1 class="title1">用紙サイズ情報編集</h1>

        <button id="deleteBtn" class="btnInfo">削除</button>
        <div>
            <label class="label1">用紙サイズID</label><label class="exlist">（※）</label><br />
            <br />
            <input type="text" class="text_s" value="" /> <button class="btnInfo" style="margin-left:20px">参照</button>
            <br />
            <br />
            <br />
        </div>
        <div>
            <label class="label1">用紙サイズ名</label><label class="exlist">（※）</label><br />
            <br />
            <input type="text" class="text_s" value="" /> <button class="btnInfo" style="margin-left:20px">参照</button>
            <br />
            <br />
            <br />
        </div>
        <div>
            <label class="label1">用紙画像パス</label><br />
            <br />
            <input type="text" class="text" value="" /> <button class="btnInfo" style="margin-left:20px">参照</button>
            <br />
            <br />
            <br />
        </div>
        <div>
            <label class="label1">面付数(縦)</label><br />
            <br />
            <input type="text" class="text_s" value="" /> <button class="btnInfo" style="margin-left:20px">参照</button>
            <br />
            <br />
            <br />
        </div>
        <div>
            <label class="label1">面付数(横)</label><br />
            <br />
            <input type="text" class="text_s" value="" /> <button class="btnInfo" style="margin-left:20px">参照</button>
            <br />
            <br />
            <br />
        </div>
        <div>
            <label class="label1">印刷方向</label><label class="exlist">（※）</label><br />
            <br />
            <p>
                <input type="radio" name="type" style="margin-left:20px" checked>縦
                <input type="radio" name="type" style="margin-left:20px">横
            </p>
            <br />
            <br />
            <br />
        </div>
        <div>
            <label class="label1">説明</label>
            <br />
            <br />
            <textarea type="text" class="textArea" value="" rows="7"> </textarea>
            <br />
            <br />
            <br />
        </div>
        <br />
        <div>
            <label class="label1">削除状態</label><br />
            <br />
            <p>
                <input type="radio" name="level" style="margin-left:20px" checked>通常
                <input type="radio" name="level" style="margin-left:20px">仮削除
                <input type="radio" name="level" style="margin-left:20px">削除
            </p>
        </div>
        <div>
            <br />
            <br />
            <br />
        </div>
        <button id="backBtn" class="btnInfo">戻る</button>
        <button id="updateBtn" class="btnInfo">登録</button>
        <div>
            <br />
        </div>
    </form>
</body>
</html>
